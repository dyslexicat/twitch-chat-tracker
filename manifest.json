{
  "manifest_version": 2,
  "name": "twitch-chat",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Type a word to track in twitch chat"
  }
}
